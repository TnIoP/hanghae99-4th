<link href="/static/mystyle.css" rel="stylesheet" />

<head>
    <title>게시글 수정 페이지</title>
    <script>
        $(document).ready(function () {
            getPosts();

        });

        function getPosts() {
            $("#postList").empty();
            $.ajax({
                type: "GET",
                url: `/api/board`,
                data: {},
                success: function (response) {
                    let posts = response;
                    for (let i = 0; i < posts.length; i++) {
                        maketb(posts[i]);
                    }
                }
            });
        }

        function maketb(list) {
            let tempHtml = `<tr>
                                <td>${list.date}</td>
                                <td><a href="/detail?name=${list['name']}">${list["title"]}</td>
                                <td>${list["name"]}</td>
                            </tr>`;
            $("#postList").append(tempHtml);
        }

    </script>
</head>

<body>
    <div class="wrap">
        <thead>
            <table border="1" width=300px>
                <thead>
                    <tr>
                        <th>작성 날짜</th>
                        <th>제목 제목</th>
                        <th>작성자명</th>
                    </tr>
                </thead>
                <tbody id="postList">
                    
                </tbody>
            </table>
        </thead>
        <button class="btn btn-primary" type="submit" onclick='window.location.href="/board/post"'>글쓰기</button>
    </div>



</body>

